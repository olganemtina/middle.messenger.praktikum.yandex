<html>
    <head>
        <meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Профиль</title>
        <link rel="stylesheet" href="./profile.scss">
    </head>
    <body>
        <main class="content-center-wrapper">
            <div class="profile_container">
                <h1 class="text-align-center">
                    Персональные данные</p>
                </h1>
                <div>
                    <div class="avatar margin-bottom-50"></div>
                    <div class="profile-item">
                        <div class="width-50-percent label">Имя</div>
                        <div class="flex-element-align-right">
                            {{profile.first_name}}
                        </div>
                    </div>
                    <div class="profile-item">
                        <div class="width-50-percent label">Фамилия</div>
                        <div class="flex-element-align-right">
                            {{profile.second_name}}
                        </div>
                    </div>
                    <div class="profile-item">
                        <div class="width-50-percent label">Телефон</div>
                        <div class="flex-element-align-right">
                            {{profile.phone}}
                        </div>
                    </div>
                    <div class="profile-item">
                        <div class="width-50-percent label">Логин</div>
                        <div class="flex-element-align-right">
                            {{profile.login}}
                        </div>
                    </div>
                    <div class="profile-item">
                        <div class="width-50-percent label">Почта</div>
                        <div class="flex-element-align-right">
                            {{profile.email}}
                        </div>
                    </div>
                    <div class="profile-item">
                        <div class="width-50-percent label">Имя в чате</div>
                        <div class="flex-element-align-right">
                            {{profile.display_name}}
                        </div>
                    </div>  
                    <div class="margin-top-25 margin-bottom-25">
                        <a href="/src/pages/profile/edit.hbs" class="link">Изменить данные</a>
                    </div>                 
                </div>
            </div>
        </main>         
    </body>
</html> 