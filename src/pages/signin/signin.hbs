<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Авторизация</title>
		<link rel="stylesheet" href="./signin.scss" />
	</head>
	<body>
		<main class="content-center-wrapper">
			<div class="auth_container">
				<div class="auth_container_form">
					<h1 class="text-align-center">
						Авторизация
					</h1>
					<form action="">
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Логин"
								name="login"
							/>
						</div>
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Пароль"
								name="password"
							/>
						</div>
						<div>
							<button class="button">Войти</button>
						</div>
					</form>
					<div class="auth-redirect-to-signup">
						<a class="link" href="/src/pages/signup/signup.hbs">Регистрация</a>
					</div>
				</div>
				<div class="auth_container_more">
				</div>
			</div>
		</main>
	</body>
</html>