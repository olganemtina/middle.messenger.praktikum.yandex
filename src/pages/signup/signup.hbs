<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
		<link rel="stylesheet" href="./signup.scss" />
	</head>
	<body>
		<div class="content-center-wrapper padding-15">
			<div class="auth_container">
				<div class="auth_container_form">
					<div class="header text-align-center">
						Регистрация
					</div>
					<form action="">
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Имя"
								name="first_name"
							/>
						</div>
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Фамилия"
								name="second_name"
							/>
						</div>
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Телефон"
								name="phone"
							/>
						</div>
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Логин"
								name="login"
							/>
						</div>
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Почта"
								name="email"
							/>
						</div>
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Пароль"
								name="password"
							/>
						</div>
						<div>
							<input
								type="text"
								class="auth-input"
								placeholder="Пароль (еще раз)"
								name="password2"
							/>
						</div>
						<div>
							<button class="button">Войти</button>
						</div>
					</form>
					<div class="auth-redirect-to-signup">
						<a
							class="link"
							href="/src/pages/signin/signin.hbs"
						>Авторизоваться</a>
					</div>
				</div>
				<div class="auth_container_more">
				</div>
			</div>
		</div>
	</body>
</html>